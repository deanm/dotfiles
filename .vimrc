set background=dark

" Syntax highlighting
syntax on

" Don't bog down on long lines
set synmaxcol=100

" Do not write out .viminfo files or backups
set viminfo=
set noswapfile

" All of our 2 space autoindent business
set smarttab
set expandtab
set softtabstop=2
set tabstop=2
set shiftwidth=2
set autoindent

" Make backspace work over autoindent, newlines, etc
set backspace=2
